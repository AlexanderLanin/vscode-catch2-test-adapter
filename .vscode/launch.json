{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Catch2 adapter",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Catch2 worker",
      "processId": "${command:PickProcess}"
    }
  ]
}
