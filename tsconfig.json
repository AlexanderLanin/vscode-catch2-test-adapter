{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, //TODO:release
    "removeComments": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/main.ts", "test/*", "test/util/*", "test/repo_script/*"] //TODO:future test/**/*.ts
}
